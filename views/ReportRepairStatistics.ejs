<head>
    <meta charset="utf-8">
    <title>Ramblin Wrecks</title>
    <link rel="stylesheet" href="../css/main.css" type="text/css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
</head>

<body>
    <div class="search-results">
        <h1>Repair Statistics</h1>
        <% if(vehicles.length === 0) { %>
            <h2>Sorry, it looks like we donâ€™t have that in stock!</h2>
        <% } else { %>
        <table>
            <tr>
                <th>VendorName</th>
                <th>TotalCost</th>
                <th>NoOfRepairs</th>
                <th>AveTime (days)</th>
                <th>AvgRepairsperVehicle</th>
                
            </tr>
                <% vehicles.forEach((v) => { %>
                    <tr>
                        <td><%= v.VendorName %></td>
                        <td><%= v.TotalCost %></td>
                        <td><%= v.NoOfRepairs %></td>
                        <td><%= v.AveTime %></td>
                        <td><%= v.AvgRepairsperVehicle %></td>
            
                    </tr>
                <%  }); %>
        </table>
    <% } %> 
    </div>
</body>
